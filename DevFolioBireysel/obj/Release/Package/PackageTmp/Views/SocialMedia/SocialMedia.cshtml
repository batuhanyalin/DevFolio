@model List<DevFolioBireysel.Models.TblSocialMedia>
@{
    ViewBag.Title = "SocialMedia";
    Layout = "~/Views/AdminLayout/AdminLayout.cshtml";
}

<div class="container">
    <table class="table table-bordered">
        <tr>
            <th>ID</th>
            <th>Platform</th>
            <th>Durum</th>
            <th>Sil</th>
            <th>Güncelle</th>
        </tr>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.SocialMediaID</td>
                <td>@item.PlatformName</td>
                <td>@item.Status</td>
                <td><a href="~/SocialMedia/DeleteSocialMedia/@item.SocialMediaID" class="btn btn-danger">Sil</a></td>
                <td><a href="/SocialMedia/UpdateSocialMedia/@item.SocialMediaID" class="btn btn-success">Güncelle</a></td>
            </tr>
        }
    </table>
    <a href="/SocialMedia/CreateSocialMedia" class="btn btn-info">Yeni Sosyal Medya Girişi</a>
</div>

