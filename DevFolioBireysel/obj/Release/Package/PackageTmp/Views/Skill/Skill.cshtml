@model List<DevFolioBireysel.Models.TblSkill>
@{
    ViewBag.Title = "Skill";
    Layout = "~/Views/AdminLayout/AdminLayout.cshtml";
}

<h2>Yetenekler Listesi</h2>
<br />
<a href="/Skill/CreateSkill" class="btn btn-info">Yeni Yetenek Girişi</a>
<br />
<br />
<div class="container">
    <table class="table table-bordered">
        <tr>
            <th>#</th>
            <th>Yetenek Adı</th>
            <th>Yetenek Oranı</th>
            <th>Sil</th>
            <th>Güncelle</th>
        </tr>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.SkillID</td>
                <td>@item.SkillTitle</td>
                <td>@item.SkillValue</td>
                <td><a href="/Skill/DeleteSkill/@item.SkillID" class="btn btn-danger">Sil</a></td>
                <td><a href="/Skill/UpdateSkill/@item.SkillID" class="btn btn-success">Güncelle</a></td>
            </tr>
        }
    </table>
</div>
