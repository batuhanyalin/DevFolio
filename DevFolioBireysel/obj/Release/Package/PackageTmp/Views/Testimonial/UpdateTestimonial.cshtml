@model DevFolioBireysel.Models.TblTestimonial
@{
    ViewBag.Title = "UpdateTestimonial";
    Layout = "~/Views/AdminLayout/AdminLayout.cshtml";
}

<h2>Referans Güncelle</h2>
<form method="post">
    <label>ID</label>
    @Html.TextBoxFor(x => x.TestimonialID, new { @class = "form-control" })
    <br />
    <label>Adı Soyadı</label>
    @Html.TextBoxFor(x => x.NameSurname, new { @class = "form-control" })
    <br />
    <label>Referans Fotoğrafı</label>
     @Html.TextBoxFor(x => x.ImageUrl, new {@class="form-control"})
    <br />
    <label>Açıklama</label>
    @Html.TextBoxFor(x => x.Description, new { @class = "form-control" })
    <br />
    <button class="btn btn-primary">Refeans Güncelle</button>
</form>

