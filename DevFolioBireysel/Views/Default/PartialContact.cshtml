@model DevFolioBireysel.Models.TblContact
<div class="col-md-6">
    <div class="title-box-2">
        <h5 class="title-left">
            Bana Mesaj Gönder
        </h5>
    </div>
    <div>
        <form method="post">
            <div id="sendmessage">Mesajın gönderildi! Mesajını inceleyip geri dönüş yapacağım :)</div>
            <div id="errormessage">Bilgileri eksiksiz ve doğru giriniz.</div>
            <div class="row">
                <div class="col-md-12 mb-3">
                    <div class="form-group">
                        @Html.TextBoxFor(x => x.NameSurname, new { @class = "form-control", @placeholder = "Adınız Soyadınız" })
                        @Html.ValidationMessageFor(x => x.NameSurname, "", new { @class = "text-danger" })
                    </div>
                </div>
                <div class="col-md-12 mb-3">
                    <div class="form-group">
                        @Html.TextBoxFor(x => x.Email, new { @class = "form-control", @placeholder = "E-posta" })
                        @Html.ValidationMessageFor(x => x.Email, "", new {@class="text-danger"})
                    </div>
                </div>
                <div class="col-md-12 mb-3">
                    <div class="form-group">
                        @Html.TextBoxFor(x => x.Subject, new { @class = "form-control", @placeholder = "Konu" })
                        @Html.ValidationMessageFor(x => x.Subject, "", new {@class="text-danger"})
                    </div>
                </div>
                <div class="col-md-12 mb-3">
                    <div class="form-group">
                        @Html.TextBoxFor(x => x.Message, new { @class = "form-control", @placeholder = "Mesajınız" })
                        @Html.ValidationMessageFor(x => x.Message, "", new {@class="text-danger"})
                    </div>
                </div>
                <div class="col-md-12">
                    <button class="button button-a button-big button-rouded">Gönder</button>
                </div>
            </div>
        </form>
    </div>
</div>

